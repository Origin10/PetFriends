//output:../addBook.html, doctype:strict
doctype html
html(lang='en', xmlns:th='http://www.w3.org/1000/xhtml')
  head(th:replace='common/header :: common-header')/
  body
    div(th:replace='common/header :: navbar')/
    .container
      .row
        form.form-horizontal(th:action='@{/book/add}', method='post', enctype='multipart/form-data')
          fieldset
            legend.center-block
              | New Book Information
              span(style='font-size: small')
                | * is a
                | required field
            // title
            .form-group
              label.col-md-2.control-label(for='title') * Title
              .col-md-8
                input#title.form-control(type='text', name='title', th:value='${book.title}', required='required', placeholder='Title')
                span.help-block Title of the book
            // author
            .form-group
              label.col-md-2.control-label(for='author')
                | *
                | Author
              .col-md-8
                input#author.form-control(type='text', name='author', th:value='${book.author}', required='required', placeholder='Author')
                span.help-block
                  | Author
                  | of the book
            // publisher
            .form-group
              label.col-md-2.control-label(for='publisher') Publisher
              .col-md-8
                input#publisher.form-control(type='text', name='publisher', th:value='${book.publisher}', placeholder='Publisher')
                span.help-block
                  | Publisher
                  | of the book
            // publication date
            .form-group
              label.col-md-2.control-label(for='publicationDate')
                | Publication
                | Date
              .col-md-8
                input#publicationDate.form-control(type='date', name='publicationDate', th:value='${book.publicationDate}', placeholder='ublication Date')
                span.help-block
                  | Publication
                  | Date of the book
            // language
            .form-group
              label.col-md-2.control-label(for='language') Language
              .col-md-8
                select#language.form-control(th:value='${book.language}', name='language')
                  option(value='english') English
                  option(value='spanish') Spanish
            // category
            .form-group
              label.col-md-2.control-label(for='category')
                | *
                | Category
              .col-md-8
                select#category.form-control(th:value='${book.category}', name='category')
                  option(value='', selected='selected', disabled='disabled')
                    | Please
                    | select an option...
                  option(value='Management', th:selected="(${book.category}=='Management')") Management
                  option(value='Fiction', th:selected="(${book.category}=='Fiction')") Fiction
                  option(value='Engineering', th:selected="(${book.category}=='Engineering')") Engineering
                  option(value='Programming', th:selected="(${book.category}=='Programming')") Programming
                  option(value='Arts & Literature', th:selected="(${book.category}=='Arts & Literature')")
                    | Arts
                    | & Literature
            // pages
            .form-group
              label.col-md-2.control-label(for='pageNumber') Pages
              .col-md-8
                input#pageNumber.form-control(type='number', name='numberOfPages', th:value='${book.numberOfPages}', placeholder='Page Number')
                span.help-block
                  | Number
                  | of pages of the book
            // format
            .form-group
              label.col-md-2.control-label(for='format') Format
              .col-md-8
                select#format.form-control(th:value='${book.format}', name='format')
                  option(value='paperback') Paperback
                  option(value='hardcover') Hardcover
            // isbn
            .form-group
              label.col-md-2.control-label(for='isbn') ISBN
              .col-md-8
                input#isbn.form-control(type='text', name='isbn', th:value='${book.isbn}', placeholder='ISBN')
                span.help-block ISBN of the book
            // shipping weight
            .form-group
              label.col-md-2.control-label(for='shippingWeight')
                | Shipping
                | Weight
              .col-md-8
                .input-group
                  input#shippingWeight.form-control(th:value='${book.shippingWeight}', type='number', step='0.01', name='shippingWeight', placeholder='Shipping Weight')
                  span.input-group-addon Ounces
                span.help-block Shipping Weight of the book
            // list price
            .form-group
              label.col-md-2.control-label(for='listPrice')
                | List
                | Price
              .col-md-8
                .input-group
                  span.input-group-addon $
                  input#listPrice.form-control(th:value='${book.listPrice}', type='number', name='listPrice', step='0.01', placeholder='List Price')
                span.help-block List price of the book
            // our price
            .form-group
              label.col-md-2.control-label(for='ourPrice')
                | Our
                | Price
              .col-md-8
                .input-group
                  span.input-group-addon $
                  input#ourPrice.form-control(th:value='${book.ourPrice}', type='number', name='ourPrice', step='0.01', placeholder='Our Price')
                span.help-block Our price of the book
            // in stock number
            .form-group
              label.col-md-2.control-label(for='inStockNumber')
                | Number
                | in stock
              .col-md-8
                input#inStockNumber.form-control(th:value='${book.inStockNumber}', type='number', name='inStockNumber', placeholder='Number of in-stock copies')
                span.help-block Number of in-stock copies
            // status of book
            .form-group
              label.col-md-2.control-label(for='status') Status
              .col-md-8
                label
                  input(value='true', type='radio', name='active', checked='checked')
                  |  Active
                label
                  input(value='false', type='radio', name='active')
                  | 								Inactive
                span.help-block
                  | Whether the book is
                  | active or inactive
            // description
            .form-group
              label.col-md-2.control-label(for='description') Description
              .col-md-8
                textarea#description.form-control(name='description', rows='5', th:value='${book.description}', placeholder='Description')
                  span.help-block Description of the book
            // upload image
            .form-group
              .col-md-2
                label(for='bookImage') Upload book image
              .col-md-8
                input#bookImage(type='file', name='bookImage', th:value='${book.bookImage}')
            .form-group
              .col-md-2
              .col-md-8
                button.btn.btn-success(type='submit') Add Book
                a.btn.btn-danger(th:href='@{/}') Cancel
    div(th:replace='common/header :: body-bottom-scripts')/
