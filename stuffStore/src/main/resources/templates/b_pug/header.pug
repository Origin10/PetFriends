//output:../common/header.html, doctype:strict
doctype html
html(lang='en', xmlns:th='http://www.w3.org/1999/xhtml', xmlns:sec='http://www.w3.org/1999/xhtml')
  head(th:fragment='common-header')
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    title Le's Bookstore
    // Bootstrap core CSS
    link(href='/css/bootstrap.min.css', rel='stylesheet')
    link(href='/css/non-responsive.css', rel='stylesheet')
    // data table
    link(th:href='@{/css/jquery.dataTables.min.css}', rel='stylesheet')
    link(th:href='@{/css/dataTables.bootstrap.min.css}', rel='stylesheet')
    link(th:href='@{/css/font-awesome.min.css}', rel='stylesheet')
    // Custom styles for this template
    link(href='/css/style.css', rel='stylesheet')
    link(rel='icon', href='/image/applie-touch-icon.png')
  body
    div(th:fragment='navbar')
      .page-top(style='width: 100%; height: 20px; background-color: #f46b42;')
      // Static navbar
      nav.navbar.navbar-default.navbar-inverse
        .container-fluid
          .navbar-header
            a.navbar-brand(th:href='@{/}') LE'S BOOKSTORE
          #navbar
            ul.nav.navbar-nav.navbar-left
              li.dropdown
                a.dropdown-toggle(th:href='@{/bookshelf}', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                  | BOOKS 
                  span.caret
                ul.dropdown-menu
                  li
                    a(th:href='@{/bookshelf}') Browse the bookshelf
                  li
                    a(th:href='@{/hours}') Store hours & Directions
                  li
                    a(th:href='@{/faq}') FAQ
              form.navbar-form(th:action='@{/searchBook}', method='post')
                .form-group
                  input.form-control(type='text', name='keyword', placeholder='Book title')
                button.btn.btn-default(type='submit') Search
            ul.nav.navbar-nav.navbar-right
              li
                a(th:href='@{/shoppingCart/cart}') SHOPPING CART
              li
                a(sec:authorize='isAnonymous()', th:href='@{/login}')
                  | MY
                  | ACCOUNT
              li
                a(sec:authorize='isAuthenticated()', th:href='@{/myProfile}') MY ACCOUNT
              li
                a(sec:authorize='isAuthenticated()', th:href='@{/logout}') LOGOUT
          // /.nav-collapse
        // /.container-fluid
    div(th:fragment='footer')
      br
      br
      footer
        .row
          .col-xs-3.footerleft
            .logofooter
              a(th:href='@{/}')
                img.img-responsive(src='/image/logo.png', style='width: 200px;')
            p
              | Le's Independent Book Store. 
              br
              | Serving our customers with the
              | 						best.
          .col-xs-3.paddingtop-bottom
            h6.heading7 CONTACT
            ul.post
              p
                i.fa.fa-map-pin
                |  123 XXX Ave
                br
                |  Boston MA, USA
                | 							02112
              p
                i.fa.fa-phone
                |  Phone (USA) : +1 999 999 9999
              p
                i.fa.fa-envelope
                |  E-mail : info@lebookstore.com
          .col-xs-3.paddingtop-bottom
            h6.heading7 LINKS
            ul.footer-ul
              li
                a(href='#')  Privacy Policy
              li
                a(href='#')  Terms & Conditions
              li
                a(href='#')  Frequently Ask Questions
          .col-xs-3.paddingtop-bottom
            h6.heading7 STORE HOURS
            .post
              p Monday - Saturday: 9am - 11pm
              p Sunday: 10am - 10pm
      .copyright
        .col-md-6
          p Â© 2017 - All Rights Reserved
        .col-md-6
          ul.bottom_ul
            li
              a(href='#') About us
            li
              a(href='#') Blog
            li
              a(href='#') Faq's
            li
              a(href='#') Contact us
            li
              a(href='#') Site Map
    div(th:fragment='body-bottom-scripts')
      script(th:src='@{/js/jquery.min.js}').
      script(th:src='@{/js/bootstrap.min.js}').
      script(th:src='@{/js/scripts.js}').
      // data table
      script(th:src='@{/js/jquery.dataTables.min.js}').
      script(th:src='@{/js/dataTables.bootstrap.min.js}').
